<div class="row" id="properties">
    <div class="center">
        <h3>Properties</h3>

    </div>
    <hr>
{% if properties is empty %}
    <div style="min-height: 300px">
        <div class="center">
            <h4>WE DIDN'T FIND ANY PROPERTY.</h4>
        </div>
    </div>
    {% else %}
        {% for props in properties %}
            <div class="col m6 l4 s12">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <div class="carousel carousel-slider" style="max-height: 250px">
                            {% for image in props.images %}
                                <a class="carousel-item" href="#{{ image.id }}!"><img class="activator responsive-img" src="{{ asset(prop_images_path ~ props.scapeUser.username ~'/'~ props.category.categoryName~'/'~ props.propName~'/'~image.imagePath) }}" alt="{{ props.propName }}"></a>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{ props.propName }}<i class="material-icons right">more_vert</i></span>
                        <div class="chip white-text cyan">
                            Rs: {{ props.propDetails.propPrice }}
                        </div>
                        <div class="center">

                            <a class="link" href="{{ path('view_property',{ id: props.id }) }}">view property</a>
                        </div>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{ props.propName }}<i class="material-icons right">close</i></span>
                        <div class="m12 l12 s12">
                            <table cellpadding="1" cellspacing="1" class="table table-hover" id="myTable">
                                <thead>
                                <tr>
                                    <th>CITY</th>
                                    <th>NOTES</th>
                                    <th>STATUS</th>
                                </tr>

                                </thead>
                                <tbody>
                                <tr>

                                    <td>{{ props.propertyAddress.propCity  }}</td>
                                    <td>{{ props.propNotes }}</td>
                                    <td>{{ props.propStatus }}</td>
                                </tr>
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>

            </div>
        {% endfor %}

    {% endif %}
</div>
<div class="row">
    <div id="loaderProperties"></div>

</div>
<div class="row">

        <div class="nav-wrapper" style="background: transparent">
            {{ knp_pagination_render(properties) }}
        </div>

</div>