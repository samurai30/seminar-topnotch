{% extends 'base.html.twig' %}

{% block title %}Scape-Vendor{% endblock %}

{% block body %}
    <div style="min-height: 60em;padding-left: 300px;" >


        <ul id="sidenav-1" class="sidenav sidenav-fixed" style="z-index: 0; padding-top: 3%; ">
            <li><a class="subheader grey lighten-1 white-text" >VENDOR PANEL</a></li>
            <li><a href="{{ path('vendorportalAdd') }}" >ADD-PROPERTIES</a></li>
            <li><a href="{{ path('vendorportalList',{ vendor_id: app.user.id }) }}" class="cyan lighten-3">PROPERTIES</a></li>
            <li><a href="">APPOINTMENTS</a></li>
        </ul>
        <div class="container z-depth-1" style="margin-top: 6%; margin-bottom: 10%;border-radius: 20px; padding: 4%;">
            <div class="row">
                <div class="center-align">
                    <h3 class="TitleClass">PROPERTIES</h3>
                    <hr>
                </div>
            </div>
            <div class="row">


                <ul class="collection">
                    {% for prop in properties %}
                        <li class="collection-item avatar">
                            <i class="material-icons circle">home</i>
                            <span class="title" style="font-weight: bold">{{ prop.propName }}</span>
                            <p>{{ prop.propertyAddress.propDistrict }} <br>
                                {{ prop.propertyAddress.propCity }}
                            </p>
                             <p class="red-text"> Status: {{ prop.propStatus }}</p>
                            <a href="{{ path('vendorportalDelete',{prop_id: prop.id}) }}" class="secondary-content"><i class="material-icons">delete</i></a>
                        </li>
                    {% endfor %}



                </ul>
            </div>


        </div>
    </div>

{% endblock %}
